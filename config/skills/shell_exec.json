{
  "id": "shell_exec",
  "name": "Shell Execution (Bash)",
  "description": "Essential file and text processing tools.",
  "patterns": [
    {
      "task": "Recursively find files",
      "recommended": "find . -type f"
    },
    {
      "task": "Filter text with pattern",
      "recommended": "grep \"pattern\""
    },
    {
      "task": "Get file size in bytes",
      "recommended": "du -b \"$1\""
    },
    {
      "task": "Read file content",
      "recommended": "cat \"$1\""
    },
    {
      "task": "Sort numerically (Smallest first)",
      "recommended": "sort -n"
    },
    {
      "task": "Sort numerically (Largest first)",
      "recommended": "sort -rn"
    },
    {
      "task": "Isolate path field",
      "recommended": "cut -f2-"
    },
    {
      "task": "Select the first line",
      "recommended": "head -n 1"
    }
  ]
}
