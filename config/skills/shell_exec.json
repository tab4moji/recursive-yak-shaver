{
  "id": "shell_exec2",
  "name": "Shell Execution v2",
  "description": "Standard tools for file processing.",
  "patterns": [
    {
      "task": "Find largest file path",
      "recommended": "path=$(find . -type f -name \"*.py\" -exec du -b {} + | sort -rn | head -n 1 | cut -f2-)",
      "output_type": "Path"
    },
    {
      "task": "Find smallest file path",
      "recommended": "path=$(find . -type f -exec du -b {} + | sort -n | head -n 1 | cut -f2-)",
      "output_type": "Path"
    },
    {
      "task": "Run pylint",
      "recommended": "content=$(pylint \"$path\")",
      "input_type": "Path",
      "output_type": "Content"
    },
    {
      "task": "Display content",
      "recommended": "content=$(cat \"$path\")",
      "input_type": "Path",
      "output_type": "Content"
    },
    {
      "task": "Get current time",
      "recommended": "now=$(date '+%Y-%m-%d %H:%M:%S')",
      "output_type": "DateTime",
      "binding": "now"
    },
    {
      "task": "Get current directory path",
      "recommended": "current_path=$(pwd)",
      "output_type": "Path",
      "binding": "current_path"
    }
  ]
}
