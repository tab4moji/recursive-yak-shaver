{
  "id": "shell_exec",
  "name": "Shell Execution (Bash)",
  "description": "Executes commands in a Linux Bash environment.",
  "patterns": [
    {
      "task": "List files recursively",
      "recommended": "find . -type f",
      "input_type": "None",
      "output_type": "List (File Paths)"
    },
    {
      "task": "Filter text patterns",
      "recommended": "grep \"pattern\"",
      "input_type": "Stream",
      "output_type": "Filtered Stream"
    },
    {
      "task": "Get file size in bytes",
      "recommended": "du -b \"$1\"",
      "input_type": "File Path",
      "output_type": "Size (Bytes) + Path"
    },
    {
      "task": "Read file content",
      "recommended": "cat \"$1\"",
      "input_type": "File Path",
      "output_type": "Content Stream"
    },
    {
      "task": "Sort numerically (Ascending)",
      "recommended": "sort -n",
      "input_type": "List",
      "output_type": "Sorted List"
    },
    {
      "task": "Sort numerically (Descending)",
      "recommended": "sort -rn",
      "input_type": "List",
      "output_type": "Sorted List"
    },
    {
      "task": "Find the LARGEST (Biggest) result",
      "recommended": "sort -rn | head -n 1",
      "input_type": "List",
      "output_type": "Single Line"
    },
    {
      "task": "Find the SMALLEST (Tiniest) result",
      "recommended": "sort -n | head -n 1",
      "input_type": "List",
      "output_type": "Single Line"
    },
    {
      "task": "Extract Path from size-prefixed stream",
      "recommended": "cut -f2-",
      "input_type": "List (Size + Path)",
      "output_type": "List (Paths Only)"
    },
    {
      "task": "Select the single top result",
      "recommended": "head -n 1",
      "input_type": "List",
      "output_type": "Single Line"
    }
  ]
}
